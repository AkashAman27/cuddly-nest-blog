# Database Configuration
# Replace these with your actual Supabase credentials

# Supabase URL
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here

# Supabase Anon Key (Public key safe for client-side use)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase Service Role Key (Private key for server-side operations)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Database Direct URL (Optional - for direct database connections)
DATABASE_URL=your_database_direct_url_here

# Other Environment Variables
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# Email Configuration (Optional)
EMAIL_FROM=noreply@yourdomain.com
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASSWORD=your_smtp_password

# Analytics (Optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your_ga_id_here

# External APIs (Optional)
OPENAI_API_KEY=your_openai_api_key_here
UNSPLASH_ACCESS_KEY=your_unsplash_access_key_here

# Storage Configuration (Optional)
NEXT_PUBLIC_SUPABASE_STORAGE_BUCKET=blog-images

# Google API Key for image generation
GOOGLE_API_KEY=your_google_api_key_here

# Mistral AI API Key for translations
MISTRAL_API_KEY=your_mistral_api_key_here